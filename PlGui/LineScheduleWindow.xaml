<Window x:Class="PlGui.LineScheduleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlGui"
        mc:Ignorable="d"
        Title="LineScheduleWindow" Height="400" Width="450">
    <Grid Background="#FFBAFFD0">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label x:Name="TopLabel" Grid.Row="0" Content="Label" Width="auto" HorizontalAlignment="Center" Margin="0,0" VerticalAlignment="Center"/>
        <ListBox x:Name="lineListBox" Margin="5" Grid.Row="1" ItemsSource="{Binding}" RenderTransformOrigin="0.5,0.5"/>
    </Grid>
</Window>
